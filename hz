            { pos: 11, name: 'Tensei', level: 277, workshop: 0 },
            { pos: 12, name: 'sackxyz', level: 270, workshop: 0 },
            { pos: 13, name: 'vojtolos', level: 258, workshop: 0 },
            { pos: 14, name: 'Elizabeth03', level: 254, workshop: 0 },
            { pos: 15, name: 'Kobl√≠≈æek', level: 254, workshop: 0 },
            { pos: 16, name: 'wuzicek', level: 254, workshop: 0 },
            { pos: 17, name: 'Martin75', level: 251, workshop: 0 },
