            { pos: 19, name: 'Tacamassanomuro', level: 246, workshop: 0 },
            { pos: 20, name: 'herpes', level: 228, workshop: 0 },
            { pos: 21, name: 'KokotZDubnice', level: 218, workshop: 0 },
            { pos: 22, name: 'Werdyy', level: 196, workshop: 0 },
            { pos: 23, name: 'PafkoCZ', level: 179, workshop: 0 },
            { pos: 24, name: 'LaShima', level: 175, workshop: 0 },
            { pos: 25, name: 'Lenox', level: 160, workshop: 0 },
            { pos: 26, name: 'ElPiiinis', level: 129, workshop: 0 },
            { pos: 27, name: 'Pospec666', level: 111, workshop: 0 },
            { pos: 28, name: 'Oreke', level: 107, workshop: 0 },
            { pos: 29, name: 'BEEmajus', level: 102, workshop: 0 }
        ];

        function getWorkshopRequirement(playerLevel) {
            for (const [level, requirement] of Object.entries(workshopLimits).sort((a, b) => b[0] - a[0])) {
                if (playerLevel >= parseInt(level)) {
                    return requirement;
                }
            }
            return 0;
        }

        function checkRequirement(playerLevel, workshopLevel) {
            const requirement = getWorkshopRequirement(playerLevel);
            return workshopLevel >= requirement;
        }

        function showSyncStatus(status = true) {
            const indicator = document.getElementById('syncIndicator');
            if (status) {
                indicator.classList.remove('syncing');
                indicator.innerHTML = '<div class="sync-dot"></div><span>Data ulo≈æena ‚úì</span>';
            } else {
                indicator.classList.add('syncing');
                indicator.innerHTML = '<div class="sync-dot"></div><span>Ukl√°d√°m...</span>';
            }
        }

        function loadData() {
            const saved = localStorage.getItem('villains_workshop_data');
            if (saved) {
                try {
                    const data = JSON.parse(saved);
                    members = data;
                } catch (e) {
                    console.log('Nepoda≈ôilo se naƒç√≠st data');
                }
            }
        }

        function saveData() {
            showSyncStatus(false);
            setTimeout(() => {
                localStorage.setItem('villains_workshop_data', JSON.stringify(members));
                showSyncStatus(true);
            }, 500);
        }

        function clearData() {
            if (confirm('Opravdu chce≈° vymazat v≈°echna data?')) {
                members.forEach(m => m.workshop = 0);
                localStorage.removeItem('villains_workshop_data');
                renderTable();
                updateStats();
                showSyncStatus(true);
                alert('üîÑ Data vymaz√°na!');
            }
        }

        function exportCSV() {
            let csv = 'Po≈ôad√≠,Jm√©no,Level,D√≠lna,Limit,Stav\n';
            members.forEach((m, idx) => {
                const req = getWorkshopRequirement(m.level);
                const met = checkRequirement(m.level, m.workshop);
                csv += `${idx + 1},"${m.name}",${m.level},${m.workshop},"${req}","${met ? 'OK' : 'FAIL'}"\n`;
            });
            
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'villains_workshop.csv';
            link.click();
        }

        function exportToPDF() {
            const element = document.getElementById('pdfContent');
            const opt = {
                margin: 8,
                filename: 'villains_workshop_tracker.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { orientation: 'portrait', unit: 'mm', format: 'a4' }
            };
            
            html2pdf().set(opt).from(element).save();
        }

        function updateWorkshop(name, value) {
            const member = members.find(m => m.name === name);
            if (member) {
                member.workshop = parseInt(value) || 0;
                renderTable();
                updateStats();
                saveData();
            }
        }

        function updateStats() {
            const total = members.length;
            const completed = members.filter(m => checkRequirement(m.level, m.workshop)).length;
            const failed = total - completed;
            const percent = total > 0 ? Math.round((completed / total) * 100) : 0;

            document.getElementById('totalMembers').textContent = total;
            document.getElementById('completedCount').textContent = completed;
            document.getElementById('failedCount').textContent = failed;
            document.getElementById('percentCount').textContent = percent + '%';

            // PDF stats
            document.getElementById('pdfTotalMembers').textContent = total;
            document.getElementById('pdfCompleted').textContent = completed;
            document.getElementById('pdfFailed').textContent = failed;
            document.getElementById('pdfPercent').textContent = percent + '%';
        }

        function renderTable() {
            const tbody = document.getElementById('tableBody');
            const pdfTbody = document.getElementById('pdfTableBody');
            tbody.innerHTML = '';
            pdfTbody.innerHTML = '';

            members.sort((a, b) => b.level - a.level).forEach((member, index) => {
                const requirement = getWorkshopRequirement(member.level);
                const isMet = checkRequirement(member.level, member.workshop);
                const difference = member.workshop - requirement;
                const diffText = difference > 0 ? `+${difference}` : `${difference}`;
                const diffColor = difference >= 0 ? '#28a745' : '#dc3545';
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="pos">#${index + 1}</td>
                    <td class="name">
                        <input type="text" style="width: 100px; padding: 4px; border: 1px solid var(--border); border-radius: 4px;" 
                               value="${member.name}" onchange="editMemberName('${member.pos}', this.value)">
                    </td>
                    <td class="level-cell">
                        <input type="number" style="width: 70px; padding: 4px; border: 1px solid var(--border); border-radius: 4px; text-align: center;" 
                               value="${member.level}" onchange="editMemberLevel('${member.pos}', this.value)" min="1" max="500">
                    </td>
                    <td>
                        <input type="number" value="${member.workshop}" 
                               onchange="updateWorkshop('${member.name}', this.value)"
                               min="0" max="20">
                    </td>
                    <td>
                        <span class="requirement ${isMet ? 'met' : 'not-met'}">
                            ${requirement} pot≈ôeba
                        </span>
                    </td>
                    <td style="font-weight: bold; color: ${diffColor};">
                        ${diffText}
                    </td>
                    <td>
                        <span class="status-badge ${isMet ? 'ok' : 'warning'}">
                            ${isMet ? '‚úÖ OK' : '‚ùå FAIL'}
                        </span>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-edit" onclick="editMember('${member.pos}')">‚úèÔ∏è √öprav</button>
                            <button class="btn-delete" onclick="deleteMember('${member.pos}')">üóëÔ∏è Sma≈æ</button>
                        </div>
                    </td>
                `;
                tbody.appendChild(row);

                // PDF ≈ô√°dek
                const pdfRow = document.createElement('tr');
                pdfRow.innerHTML = `
                    <td style="padding: 8px; border: 1px solid #ddd;">#${index + 1}</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">${member.name}</td>
                    <td style="padding: 8px; border: 1px solid #ddd; text-align: center;">${member.level}</td>
                    <td style="padding: 8px; border: 1px solid #ddd; text-align: center;">${member.workshop}</td>
                    <td style="padding: 8px; border: 1px solid #ddd; text-align: center;">${requirement}</td>
                    <td style="padding: 8px; border: 1px solid #ddd; text-align: center; color: ${diffColor}; font-weight: bold;">${diffText}</td>
                    <td style="padding: 8px; border: 1px solid #ddd; text-align: center; color: ${isMet ? '#28a745' : '#dc3545'}; font-weight: bold;">${isMet ? '‚úÖ' : '‚ùå'}</td>
                `;
                pdfTbody.appendChild(pdfRow);
            });
        }

        function renderLimits() {
            const grid = document.getElementById('limitsGrid');
            grid.innerHTML = '';

            const sortedLimits = Object.entries(workshopLimits).sort((a, b) => b[0] - a[0]);
            
            sortedLimits.forEach(([level, workshop]) => {
                const card = document.createElement('div');
                card.className = 'limit-card';
                card.innerHTML = `
                    <div class="limit-range">Lvl ${level}+</div>
                    <div class="limit-value">‚Üí Lvl ${workshop}</div>
                `;
                grid.appendChild(card);
            });
        }

        let complianceChartInstance = null;
        let workshopChartInstance = null;

        function toggleTheme() {
            const isDark = document.body.classList.toggle('dark-mode');
            document.body.classList.toggle('light-mode', !isDark);
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            const btn = document.querySelector('.theme-toggle');
            btn.textContent = isDark ? '‚òÄÔ∏è Light Mode' : 'üåô Dark Mode';
            updateCharts();
        }

        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            const isDark = savedTheme === 'dark';
            if (isDark) {
                document.body.classList.add('dark-mode');
            } else {
                document.body.classList.add('light-mode');
            }
            const btn = document.querySelector('.theme-toggle');
            btn.textContent = isDark ? '‚òÄÔ∏è Light Mode' : 'üåô Dark Mode';
        }

        function updateComplianceChart() {
            const completed = members.filter(m => checkRequirement(m.level, m.workshop)).length;
            const failed = members.length - completed;
            
            const ctx = document.getElementById('complianceChart').getContext('2d');
            
            if (complianceChartInstance) {
                complianceChartInstance.destroy();
            }

            const isDark = document.body.classList.contains('dark-mode');
            const textColor = isDark ? '#f5f5f5' : '#333';
            
            complianceChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['‚úÖ Spl≈àuje', '‚ùå Nespl≈àuje'],
                    datasets: [{
                        data: [completed, failed],
                        backgroundColor: ['#28a745', '#dc3545'],
                        borderColor: isDark ? '#2d2d2d' : '#fff',
                        borderWidth: 3
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: textColor,
                                font: { size: 13, weight: 'bold' },
                                padding: 15
                            }
                        }
                    }
                }
            });
        }

        function updateWorkshopChartDistribution() {
            const ctx = document.getElementById('workshopChart').getContext('2d');
            
            if (workshopChartInstance) {
                workshopChartInstance.destroy();
            }

            const levels = {};
            members.forEach(m => {
                const wl = m.workshop || 0;
                levels[wl] = (levels[wl] || 0) + 1;
            });

            const sortedLevels = Object.keys(levels).map(Number).sort((a, b) => a - b);
            const data = sortedLevels.map(l => levels[l]);

            const isDark = document.body.classList.contains('dark-mode');
            const textColor = isDark ? '#f5f5f5' : '#333';
            const gridColor = isDark ? 'rgba(255,255,255,0.1)' : 'rgba(0,0,0,0.1)';

            workshopChartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: sortedLevels.map(l => `Lvl ${l}`),
                    datasets: [{
                        label: 'Poƒçet hr√°ƒç≈Ø',
                        data: data,
                        backgroundColor: '#ff0000',
                        borderColor: '#cc0000',
                        borderWidth: 2,
                        borderRadius: 6
                    }]
                },
                options: {
                    indexAxis: 'x',
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            labels: {
                                color: textColor,
                                font: { size: 12, weight: 'bold' }
                            }
                        }
                    },
                    scales: {
                        y: {
                            ticks: { color: textColor },
                            grid: { color: gridColor }
                        },
                        x: {
                            ticks: { color: textColor },
                            grid: { color: gridColor }
                        }
                    }
                }
            });
        }

        function updateCharts() {
            updateComplianceChart();
            updateWorkshopChartDistribution();
        }

        function openAddMemberModal() {
            document.getElementById('addMemberModal').style.display = 'block';
            document.getElementById('newMemberName').value = '';
            document.getElementById('newMemberLevel').value = '';
            document.getElementById('newMemberWorkshop').value = '';
            document.getElementById('newMemberName').focus();
        }

        function closeAddMemberModal() {
            document.getElementById('addMemberModal').style.display = 'none';
        }

        function addNewMember() {
            const name = document.getElementById('newMemberName').value.trim();
            const level = parseInt(document.getElementById('newMemberLevel').value);
            const workshop = parseInt(document.getElementById('newMemberWorkshop').value) || 0;

            if (!name) {
                alert('‚ö†Ô∏è Zadej jm√©no ƒçlena!');
                return;
            }

            if (!level || level < 1 || level > 500) {
                alert('‚ö†Ô∏è Level mus√≠ b√Ωt mezi 1 a 500!');
                return;
            }

            if (members.some(m => m.name === name)) {
                alert('‚ö†Ô∏è ƒålen s t√≠mto jm√©nem u≈æ existuje!');
                return;
            }

            const newPos = Math.max(...members.map(m => m.pos), 0) + 1;
            members.push({ pos: newPos, name: name, level: level, workshop: workshop });

            saveData();
            closeAddMemberModal();
            renderTable();
            updateStats();
            updateCharts();
            alert(`‚úÖ ƒålen ${name} p≈ôid√°n!`);
        }

        function editMemberName(pos, newName) {
            newName = newName.trim();
            if (!newName) {
                alert('‚ö†Ô∏è Jm√©no nesm√≠ b√Ωt pr√°zdn√©!');
                return;
            }

            const member = members.find(m => m.pos == pos);
            if (member) {
                member.name = newName;
                renderTable();
                updateStats();
                updateCharts();
                saveData();
            }
        }

        function editMemberLevel(pos, newLevel) {
            newLevel = parseInt(newLevel);
            if (!newLevel || newLevel < 1 || newLevel > 500) {
                alert('‚ö†Ô∏è Level mus√≠ b√Ωt mezi 1 a 500!');
                return;
            }

            const member = members.find(m => m.pos == pos);
            if (member) {
                member.level = newLevel;
                renderTable();
                updateStats();
                updateCharts();
                saveData();
            }
        }

        function editMember(pos) {
            const member = members.find(m => m.pos == pos);
            if (member) {
                const newName = prompt('Nov√© jm√©no:', member.name);
                if (newName !== null && newName.trim()) {
                    member.name = newName.trim();
                    renderTable();
                    updateStats();
                    updateCharts();
                    saveData();
                }
            }
        }

        function deleteMember(pos) {
            const member = members.find(m => m.pos == pos);
            if (member && confirm(`Opravdu chce≈° smazat ƒçlena "${member.name}"?`)) {
                const index = members.indexOf(member);
                members.splice(index, 1);
                renderTable();
                updateStats();
                updateCharts();
                saveData();
                alert(`‚úÖ ƒålen "${member.name}" smaz√°n!`);
            }
        }

        window.onclick = function(event) {
            const modal = document.getElementById('addMemberModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Inicializace
        initTheme();
        loadData();
        renderTable();
        renderLimits();
        updateStats();
        updateCharts();
        showSyncStatus(true);
    </script>
</body>
</html>
